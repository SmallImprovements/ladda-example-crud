{
  "extends": ["airbnb-base"],
  "plugins": ["react"],
  "rules": {
    "react/jsx-uses-vars": "error",
    "react/jsx-uses-react": "error",
    "comma-dangle": ["error", "never"],
    "no-use-before-define": ["error", { "functions": false }],
    "no-underscore-dangle": "off",
    "no-param-reassign": "off",
    "max-len": [2, 80, {
      "ignoreComments": true,
      "tabWidth": 2
    }],
    "space-before-function-paren": ["error", "never"],
    "arrow-parens": ["error", "always"]
  },
  "globals": {
    "describe": true,
    "beforeEach": true,
    "angular": true,
    "inject": true,
    "it": true,
    "expect": true,
    "afterEach": true,
    "document": true,
    "PRODUCTION": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "webpack.config.js"
      }
    }
  }
}
